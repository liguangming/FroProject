<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/ly_dialog_child"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30px"
		android:layout_marginRight="30px"
		android:background="@drawable/bg_dialog_selector"
		android:orientation="vertical"
		app:layout_auto_baseheight="height">

		<TextView
			android:id="@+id/tv_dialog_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10px"
			android:layout_marginLeft="20px"
			android:layout_marginTop="20px"
			android:gravity="center_vertical"
			android:text="选择地址"
			android:textColor="@color/cd_text_color3"
			android:textSize="18sp" />

		<LinearLayout
			android:id="@+id/ly_dialog_picker"
			android:layout_width="match_parent"
			android:layout_height="400px"
			android:layout_marginLeft="20px"
			android:layout_marginRight="20px"
			android:gravity="center_vertical"
			android:orientation="horizontal">

		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="21dip"
			android:layout_marginTop="40px">

			<TextView
				android:id="@+id/btn_dialog_cancel"
				android:layout_width="120px"
				android:layout_height="70px"
				android:layout_toLeftOf="@+id/btn_dialog_sure"
				android:gravity="center"
				android:text="返回"
				android:textSize="40px"
				android:textColor="@color/cd_text_color3" />

			<TextView
				android:id="@+id/btn_dialog_sure"
				android:layout_width="120px"
				android:layout_height="70px"
				android:layout_marginLeft="80px"
				android:layout_alignParentRight="true"
				android:gravity="center"
				android:text="确认"
				android:textSize="40px"
				android:textColor="@color/cd_text_color3" />
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>