<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="547px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/ic_person_title_bj">

        <org.fro.common.widgets.tab.roundtextview.RoundRelativeLayout
            android:id="@+id/user_layout"
            android:layout_width="220px"
            android:layout_height="220px"
            android:layout_marginLeft="43px"
            android:layout_marginTop="191px"
            tab:layout_auto_baseheight="width"
            tab:rv_backgroundColor="#47ffffff"
            tab:rv_cornerRadius="360px">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerInParent="true"
                android:src="@mipmap/head_image"
                tab:layout_auto_baseheight="width" />
        </org.fro.common.widgets.tab.roundtextview.RoundRelativeLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_layout"
            android:layout_marginLeft="35px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/user_layout"
            android:ellipsize="end"
            android:maxLength="20"
            android:singleLine="true"
            android:text="Linda Wu"
            android:textColor="@android:color/white"
            android:textSize="59px" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="58px"
            android:layout_below="@id/userName"
            android:layout_marginLeft="29px"
            android:layout_marginTop="34px"
            android:layout_toLeftOf="@+id/arrow1"
            android:layout_toRightOf="@+id/user_layout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/banc_name_bg">

                <ImageView
                    android:id="@+id/bank_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="29px"
                    android:src="@mipmap/ic_bank" />

                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="29px"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="招商银行"
                    android:textColor="#a8ffffff"
                    android:textSize="32px" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="43px"
            android:src="@mipmap/white_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_marginTop="40px"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb" />

        <RelativeLayout
            android:id="@+id/modify_password_layout"
            android:layout_width="match_parent"
            android:layout_height="128px">

            <ImageView
                android:id="@+id/modify_password_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@mipmap/ico_modify_passwrod" />

            <TextView
                android:id="@+id/modify_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="51px"
                android:layout_toRightOf="@+id/modify_password_image"
                android:text="@string/modify_password"
                android:textColor="@color/cd_black"
                android:textSize="43px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="43px"
                android:src="@mipmap/personal_right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/modify_password_layout"
            android:background="#dbdbdb" />

        <RelativeLayout
            android:id="@+id/modify_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="128px"
            android:layout_below="@+id/modify_password_layout">

            <ImageView
                android:id="@+id/modify_phone_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@mipmap/ico_modify_phone_num" />

            <TextView
                android:id="@+id/modify_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="51px"
                android:layout_toRightOf="@+id/modify_phone_image"
                android:text="@string/modify_phone_num"
                android:textColor="@color/cd_black"
                android:textSize="43px" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/arrow"
                android:textColor="@color/cd_black"
                android:textSize="43px" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="43px"
                android:src="@mipmap/personal_right_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
    </RelativeLayout>


    <org.fro.common.widgets.tab.roundtextview.RoundRelativeLayout
        android:id="@+id/logout"
        android:layout_width="963px"
        android:layout_height="121px"
        android:layout_below="@id/middle_layout"
        android:layout_centerInParent="true"
        android:layout_marginTop="70px"
        tab:rv_backgroundColor="#3a87d7"
        tab:rv_cornerRadius="60px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_out"
            android:textColor="@color/white"
            android:textSize="40px" />
    </org.fro.common.widgets.tab.roundtextview.RoundRelativeLayout>

</RelativeLayout>