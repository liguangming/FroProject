<?xml version="1.0" encoding="utf-8"?>
<org.fro.common.widgets.tab.roundtextview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:rv_backgroundColor="#E6005aab"
    app:rv_cornerRadius="15px">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45px" />

    <TextView
        android:id="@+id/name_chinese"
        android:layout_width="297px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25px"
        android:gravity="center"
        android:maxLines="1"
        android:text="我的班级"
        android:textColor="@android:color/white"
        android:textSize="38px" />

    <TextView
        android:id="@+id/name_english"
        android:layout_width="297px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="14px"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="40px"
        android:text="MY CLASS"
        android:textColor="@android:color/white"
        android:textSize="18px" />
</org.fro.common.widgets.tab.roundtextview.RoundLinearLayout>