<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <fro.org.froproject.mvp.ui.view.HeadView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        view:cdTitle="@string/modify_password" />

    <RelativeLayout
        android:id="@+id/password_set_layout"
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:layout_marginTop="60px"
        android:background="@color/white">

        <View style="@style/CommonLineStyle" />

        <TextView
            android:id="@+id/password_set_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="43px"
            android:text="当前密码"
            android:textColor="#333333"
            android:textSize="43px" />

        <EditText
            android:singleLine="true"
            android:id="@+id/password_set_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="105px"
            android:layout_toRightOf="@id/password_set_title"
            android:background="@color/cd_transparent"
            android:hint="请输入当前密码"
            android:maxLength="16"
            android:maxLines="1"
            android:password="true"
            android:textColor="#333333"
            android:textColorHint="#bcbcbc"
            android:textSize="43px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/new_password_layout"
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:background="@color/white">

        <View style="@style/CommonLineStyle" />

        <TextView
            android:id="@+id/new_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="43px"
            android:text="新  密  码"
            android:textColor="#333333"
            android:textSize="43px" />

        <EditText
            android:singleLine="true"
            android:id="@+id/password_new_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="105px"
            android:layout_toRightOf="@id/new_password_title"
            android:background="@color/cd_transparent"
            android:hint="请设置新密码"
            android:maxLength="16"
            android:maxLines="1"
            android:password="true"
            android:textColor="#333333"
            android:textColorHint="#bcbcbc"
            android:textSize="43px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_confirm_layout"
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:background="@color/white">

        <View style="@style/CommonLineStyle" />

        <TextView
            android:id="@+id/password_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="43px"
            android:text="确认密码"
            android:textColor="#333333"
            android:textSize="43px" />

        <EditText
            android:singleLine="true"
            android:id="@+id/password_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="105px"
            android:layout_toRightOf="@id/password_confirm_title"
            android:background="@color/cd_transparent"
            android:hint="请确认新密码"
            android:maxLength="16"
            android:maxLines="1"
            android:password="true"
            android:textColor="#333333"
            android:textColorHint="#bcbcbc"
            android:textSize="43px" />
    </RelativeLayout>

    <org.fro.common.widgets.tab.roundtextview.RoundRelativeLayout
        android:id="@+id/commit_button"
        android:layout_width="864px"
        android:layout_height="121px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_marginTop="60px"
        view:rv_backgroundColor="#3a87d7"
        view:rv_cornerRadius="60px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="完    成"
            android:textColor="@color/white"
            android:textSize="46px" />
    </org.fro.common.widgets.tab.roundtextview.RoundRelativeLayout>

</LinearLayout>